<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:util="http://www.springframework.org/schema/util"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
			http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">

	<util:properties id="dataconfig" location="classpath:dataconfig.properties" />
	
	<bean id="dataSource" class="com.jce.mvc.commons.support.datasource.CryptoDataSource" destroy-method="close">
		<property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver" />
		<property name="url" value="#{dataconfig['bbs.url']}" />
		<property name="username" value="#{dataconfig['bbs.username']}" />
		<property name="password" value="#{dataconfig['bbs.password']}" />
		<property name="initialSize" value="1" />
		<property name="maxActive" value="50" />
		<property name="maxIdle" value="50" />
		<property name="minIdle" value="0" />
		<property name="maxWait" value="2000" />
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
 		<property name="dataSource" ref="dataSource" />
 		<property name="queryTimeout" value="5" />
 	</bean>
	
</beans>